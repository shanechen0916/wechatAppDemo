page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.header {
  width: 100%;
}

.header image {
  width: 100%;
}

.pd-list {
  padding: 10rpx 10rpx 10rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.pd-list .line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 10px;
}

.pd-list .line .pd {
  width: 48%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.pd-list .line .pd image {
  width: 100%;
  /* height: auto; */
}

.pd-list .line .pd .desc {
  font-size: 12px;
  margin-top: 10px;
}

.pd-list .line .pd .price {
  margin-top: 20px;
  color: red;
  font-size: 14px;
}

.footer {
  text-align: center;
  font-size: 13px;
  color: gray;
  margin-top: 20px;
  padding-bottom: 5px;
}